{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": [
      "ES2020",
      "DOM",
      "DOM.Iterable"
    ],
    "module": "ESNext",
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "strict": true,
    // ðŸ‘‡ ADD THIS
    "baseUrl": "./src",
    "paths": {
      "@/*": [
        "*"
      ]
    },
    "types": [
      "vite/client",
      "jest",
      "node"
    ],
  },
  "include": [
    "src"
  ]
}